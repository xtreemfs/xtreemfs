        <name>fs.defaultFS</name>
        <value>xtreemfs://localhost:32638</value>
    </property>
    <property>
        <name>fs.xtreemfs.impl</name>
        <value>org.xtreemfs.common.clients.hadoop.XtreemFSFileSystem</value>
